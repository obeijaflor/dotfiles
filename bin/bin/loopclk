#!/usr/bin/env zsh
if [[ -f $HOME/looplock ]]
then
   rm $HOME/looplock
else
   touch $HOME/looplock

   while [[ -f $HOME/looplock ]]
   do
      # For mob farming
      xdotool mousedown 1
      sleep 0.1
      #sleep 0.1
      xdotool mouseup 1
      #sleep 1
      #sleep 3 # for end farm
   done
   xdotool mouseup 1
fi
